  json_transform : '.[] | select(.appType=="RESTRICTION") | "Policy: " + .name + " - Allow Open from Managed to Unmanaged = " + (.properties.ALLOW_OPEN_FROM_MANAGED_TO_UNMANAGED // "not defined" )'
