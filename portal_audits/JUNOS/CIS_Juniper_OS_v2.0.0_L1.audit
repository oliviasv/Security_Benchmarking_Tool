      see_also        : "https://workbench.cisecurity.org/files/2278"
      regex           : "set protocols isis .+ no-authentication-check"
      number_of_lines : "^0$"
    </custom_item>

    <custom_item>
      type            : CONFIG_CHECK
      description     : "4.2.4 Ensure loose authentication check is not configured"
      info            : "IS-IS Neighbors should be authenticated.

    Rationale:
