<custom_item>
  description   : "Salesforce.com : Securing Data Access - 'Permanently Link User to Mobile Device = true'"
  info          : "This setting permanently links a user to a specific mobile device."
  solution      : "Where possible enable User to Device linking."
  see_also      : "http://help.salesforce.com/help/pdfs/en/salesforce_security_impl_guide.pdf"
  reference     : "800-53|AC-19,800-53|CM-2,CCM-3|DCS-05,CCM-3|DSI-05,CCM-3|HRS-06,CCM-3|HRS-09,CCM-3|MOS-20,HIPAA|164.308(a)(1)(ii)(B),PCI-DSS|2.2.3"
  settings_name : "MobileSettings"
  xsl_stmt      : "<xsl:template match=\"/\" xmlns:sf=\"http://soap.sforce.com/2006/04/metadata\">
<xsl:for-each select=\"//sf:result/sf:records/sf:salesforceMobile\">
<xsl:choose>
<xsl:when test=\"sf:enableUserToDeviceLinking\">
<xsl:text>Link User To Device = </xsl:text><xsl:value-of select=\"sf:enableUserToDeviceLinking\"/><xsl:text>&#10;</xsl:text>
</xsl:when>
<xsl:otherwise>
<xsl:text>Link User To Device = NOT FOUND</xsl:text><xsl:text>&#10;</xsl:text>
</xsl:otherwise>
</xsl:choose>
</xsl:for-each>
</xsl:template>"
  regex         : "Link User To Device = "
  expect        : "Link User To Device = true$"
</custom_item>

