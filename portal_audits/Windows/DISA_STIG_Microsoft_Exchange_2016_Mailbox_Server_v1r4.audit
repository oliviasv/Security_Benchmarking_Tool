          see_also        : "https://dl.dod.cyber.mil/wp-content/uploads/stigs/zip/U_MS_Exchange_2016_STIG.zip"
          value_type      : POLICY_TEXT
          value_data      : "All policies compliant"
          powershell_args : "$settings = Get-TransportConfig ; $settings | Format-List Name, Identity, MaxRecipientEnvelopeLimit; If ($settings | Where {$_.MaxRecipientEnvelopeLimit -ne 5000}) { 'Non compliant policies found' } Else { 'All policies compliant' }"
