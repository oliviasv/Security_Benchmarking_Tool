          see_also        : "https://dl.dod.cyber.mil/wp-content/uploads/stigs/zip/U_McAfee_VirusScan88_Managed_Client_V5R21_STIG.zip"
          value_type      : POLICY_TEXT
          value_data      : "True"
          powershell_args : "$subkeys = @($(get-item HKLM:\SOFTWARE\WOW6432Node\McAfee\DesktopProtection\Tasks).GetSubKeyNames()); foreach ($guid in $subkeys) { $results = @((Get-ItemProperty Registry::HKLM\SOFTWARE\McAfee\DesktopProtection\Tasks\$guid).psObject.Properties | Where-Object {($_.Name -eq 'ApplyNVP')} | Select -exp Value -first 1 ) }; if ($results -eq 0) { write-host 'False'} else { write-host 'True'};"
