  xsl_stmt         : "<xsl:choose>"
  xsl_stmt         : "<xsl:when test=\"(source/member = 'any') and (destination/member = 'any') and application/member and (action = 'deny')\"><xsl:text>Security Policy - </xsl:text><xsl:value-of select=\"@*\"/><xsl:text> : Passed</xsl:text></xsl:when>"
  xsl_stmt         : "<xsl:otherwise><xsl:text>Security Policy - </xsl:text><xsl:value-of select=\"@*\"/><xsl:text> : Failed</xsl:text></xsl:otherwise>"
  xsl_stmt         : "</xsl:choose>"
  xsl_stmt         : "<xsl:text xml:space=\"preserve\">&#10;</xsl:text>"
