      xsl_stmt         : "<xsl:otherwise>"
      xsl_stmt         : "Fail - No Interface Management Profiles found"
      xsl_stmt         : "</xsl:otherwise>"
      xsl_stmt         : "</xsl:choose>"
      regex            : ".*"
      not_expect       : "Fail"
