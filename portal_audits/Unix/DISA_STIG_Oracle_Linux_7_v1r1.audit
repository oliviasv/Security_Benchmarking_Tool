# chown smithj /home/smithj/<file or directory>"
      reference   : "800-171|3.4.2,800-53|CM-6,CAT|II,CCI|CCI-000366,CN-L3|8.1.10.6(d),CSCv6|3.1,CSF|PR.IP-1,ITSG-33|CM-6,NESA|T3.2.1,PCI-DSSv3.1|2.2.4,PCI-DSSv3.2|2.2.4,Rule-ID|SV-108307r1_rule,STIG-ID|OL07-00-020660,SWIFT-CSCv1|2.3,Vuln-ID|V-99203"
