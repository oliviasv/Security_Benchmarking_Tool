      see_also    : "https://workbench.cisecurity.org/files/2420"
      cmd         : "awk -F: '\($1!=\"root\" && $1!=\"sync\" && $1!=\"shutdown\" && $1!=\"halt\" && $1!~\/^\\+\/ && $3<'\"$\(awk '\/^\\s*UID_MIN\/{print $2}' \/etc\/login.defs\)\"' && $7!=\"'\"$(which nologin)\"'\" && $7!=\"\/bin\/false\"\) {print}' \/etc\/passwd"
      expect      : ""
    </custom_item>

