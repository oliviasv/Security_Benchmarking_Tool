      see_also    : "https://workbench.cisecurity.org/files/2378"
      file        : "/etc/logrotate.conf"
      regex       : "^[\\s]*[Ww]eekly[\\s]*$"
      expect      : "^[\\s]*[Ww]eekly[\\s]*$"
