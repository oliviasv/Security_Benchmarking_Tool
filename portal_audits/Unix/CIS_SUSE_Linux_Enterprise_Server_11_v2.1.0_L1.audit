<check_type:"Unix">

<if>
  <condition type:"AND">
    <custom_item>
      system      : "Linux"
      type        : FILE_CONTENT_CHECK
      description : "SUSE Linux 11 is installed"
      file        : "/etc/SuSE-release"
      regex       : "^[\\s]*VERSION[\\s]*="
      expect      : "^[\\s]*VERSION[\\s]*=[\\s]*11[\\s]*$"
    </custom_item>
  </condition>

