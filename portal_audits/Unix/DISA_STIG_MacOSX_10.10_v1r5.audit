<array>
<dict>
<key>policyContent</key>
<string>policyAttributePassword matches '(.*[0-9].*){1,}+'</string>
<key>policyIdentifier</key>
                        <string>com.apple.policy.legacy.requiresNumeric</string>
<key>policyParameters</key>
<dict>
