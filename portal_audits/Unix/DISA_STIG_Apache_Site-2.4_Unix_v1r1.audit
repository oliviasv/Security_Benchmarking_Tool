  file        : "/etc/httpd/conf/httpd.conf"
  regex       : "^[\\s]*Header[\\s]+"
  expect      : "^[\\s]*Header[\\s]+always[\\s]+edit[\\s]+Set-Cookie[\\s]+\\^\\(\\.\\*\\)\\$ \\$1;HttpOnly;secure"
</custom_item>

