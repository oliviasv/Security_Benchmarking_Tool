      expect      : "^[\\s]*LogFormat[\\s]+\\\\\\\"%h %l %u %t \\\\\\\\\\\"%r\\\\\\\\\\\"\\ %>s %b \\\\\\\\\\\"%{[Rr]eferer}i\\\\\\\\\\\" \\\\\\\\\\\"%{[Uu]ser-[Aa]gent}i\\\\\\\\\\\"\\\\\\\"[\\s]+[Cc]ombined[\\s]*$"
