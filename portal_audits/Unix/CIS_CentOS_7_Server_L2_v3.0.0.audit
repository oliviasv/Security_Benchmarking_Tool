      see_also    : "https://workbench.cisecurity.org/files/2831"
      cmd         : "[ -n \"$passing\" ] && passing=\"\"; [ -z \"$(/usr/bin/grep \"^\\s*linux\" /boot/grub2/grub.cfg | /usr/bin/grep -v ipv6.disabled=1)\" ] && passing=\"true\"; /usr/bin/grep -Eq \"^\\s*net\\.ipv6\\.conf\\.all\\.disable_ipv6\\s*=\\s*1\\b(\\s+#.*)?$\" /etc/sysctl.conf /etc/sysctl.d/*.conf && /usr/bin/grep -Eq \"^\\s*net\\.ipv6\\.conf\\.default\\.disable_ipv6\\s*=\\s*1\\b(\\s+#.*)?$\" /etc/sysctl.conf /etc/sysctl.d/*.conf && sysctl net.ipv6.conf.all.disable_ipv6 | /usr/bin/grep -Eq \"^\\s*net\\.ipv6\\.conf\\.all\\.disable_ipv6\\s*=\\s*1\\b(\\s+#.*)?$\" && sysctl net.ipv6.conf.default.disable_ipv6 | /usr/bin/grep -Eq \"^\\s*net\\.ipv6\\.conf\\.default\\.disable_ipv6\\s*=\\s*1\\b(\\s+#.*)?$\" && passing=\"true\"; if [ \"$passing\" = true ] ; then echo \"IPv6 is disabled on the system\"; else echo \"IPv6 is enabled on the system\"; fi"
      expect      : "IPv6 is disabled on the system"
