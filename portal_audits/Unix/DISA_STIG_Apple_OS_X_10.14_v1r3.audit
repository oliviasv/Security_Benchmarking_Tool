<check_type:"Unix">

<if>
  <condition type:"AND">
    <custom_item>
      type        : CMD_EXEC
      description : "MacOS 10.14"
      cmd         : "/usr/bin/sw_vers | /usr/bin/grep 'ProductVersion'"
      expect      : "^ProductVersion[\\s]*:[\\s]*10\.14"
    </custom_item>
  </condition>

  <then>
    <report type:"PASSED">
      description : "DISA_STIG_Apple_OS_X_10.14_v1r3.audit from DISA Apple OS X 10.14 (Mojave) v1r3 STIG"
      see_also    : "https://dl.dod.cyber.mil/wp-content/uploads/stigs/zip/U_Apple_OS_X_10-14_V1R3_STIG.zip"
    </report>

    <custom_item>
      type        : CMD_EXEC
      description : "AOSX-14-000001 - The macOS system must be configured to prevent Apple Watch from terminating a session lock."
      info        : "Users must be prompted to enter their passwords when unlocking the screen saver. The screen saver acts as a session lock and prevents unauthorized users from accessing the current user's account."
      solution    : "This setting is enforced using the 'Restrictions Policy' configuration profile."
      reference   : "800-171|3.4.6,800-171|3.4.7,800-53|CM-7,CAT|II,CCI|CCI-000056,CN-L3|7.1.3.5(c),CN-L3|7.1.3.7(d),CN-L3|8.1.4.4(b),CSF|PR.IP-1,CSF|PR.PT-3,ITSG-33|CM-7,NIAv2|SS13b,NIAv2|SS14a,NIAv2|SS14c,NIAv2|SS15a,Rule-ID|SV-104925r1_rule,STIG-ID|AOSX-14-000001,SWIFT-CSCv1|2.3,Vuln-ID|V-95787"
      see_also    : "https://dl.dod.cyber.mil/wp-content/uploads/stigs/zip/U_Apple_OS_X_10-14_V1R3_STIG.zip"
      cmd         : "/usr/sbin/system_profiler SPConfigurationProfileDataType | /usr/bin/grep allowAutoUnlock | /usr/bin/awk '{ print } END { if(NR==0) { print \"No results found\" } }'"
      expect      : "allowAutoUnlock[\\s]*=[\\s]*0;"
    </custom_item>

    <custom_item>
      type        : CMD_EXEC
      description : "AOSX-14-000002 - The macOS system must retain the session lock until the user reestablishes access using established identification and authentication procedures."
      info        : "Users must be prompted to enter their passwords when unlocking the screen saver. The screen saver acts as a session lock and prevents unauthorized users from accessing the current user's account."
      solution    : "This setting is enforced using the 'Login Window Policy' configuration profile."
      reference   : "800-171|3.4.6,800-171|3.4.7,800-53|CM-7,CAT|II,CCI|CCI-000056,CN-L3|7.1.3.5(c),CN-L3|7.1.3.7(d),CN-L3|8.1.4.4(b),CSF|PR.IP-1,CSF|PR.PT-3,ITSG-33|CM-7,NIAv2|SS13b,NIAv2|SS14a,NIAv2|SS14c,NIAv2|SS15a,Rule-ID|SV-104927r1_rule,STIG-ID|AOSX-14-000002,SWIFT-CSCv1|2.3,Vuln-ID|V-95789"
