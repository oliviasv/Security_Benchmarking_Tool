      see_also      : "https://workbench.cisecurity.org/files/2658"
      cmd           : "/usr/bin/cat /etc/passwd | /usr/bin/egrep -v \'^(root|halt|sync|shutdown)\' | /usr/bin/awk -F: \'($7 != \"/sbin/nologin\") { print $1 \" \" $3 \" \" $6 }\' | while read user uid dir; do if [ -f \"$dir/.rhosts\" ]; then /usr/bin/echo \".rhosts file $dir/.rhosts exists\"; fi; done | /usr/bin/awk \'{ print } END { if (NR==0) print \"No .rhosts files found\" }\'"
