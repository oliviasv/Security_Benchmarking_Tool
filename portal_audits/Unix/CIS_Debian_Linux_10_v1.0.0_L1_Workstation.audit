      see_also    : "https://workbench.cisecurity.org/files/2658"
      file        : "/etc/ssh/sshd_config"
      regex       : "^[\\s]*(Allow|Deny)(Users|Groups)[\\s]"
      expect      : "^[\\s]*(Allow|Deny)(Users|Groups)[\\s]"
    </custom_item>

