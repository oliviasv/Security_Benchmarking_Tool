      see_also    : "https://dl.dod.cyber.mil/wp-content/uploads/stigs/zip/U_SLES_12_V1R5_STIG-1.zip"
# Note: Variable @EMERGENCY_ADMINISTRATOR@ replaced with "root" in field "cmd".
      cmd         : "/usr/bin/chage -l root"
      expect      : "^Password[\\s]*expires[\\s]*:[\\s]*never"
    </custom_item>

