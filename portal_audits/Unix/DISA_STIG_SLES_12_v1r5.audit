      see_also    : "https://dl.dod.cyber.mil/wp-content/uploads/stigs/zip/U_SLES_12_V1R5_STIG-1.zip"
      file        : "/etc/audit/auditd.conf"
      regex       : "^[\\s]*disk_full_action"
      expect      : "^[\\s]*disk_full_action[\\s]*=[\\s]*([Ss][Yy][Ss][Ll][Oo][Gg]|[Ss][Ii][Nn][Gg][Ll][Ee]|[Hh][Aa][Ll][Tt])"
    </custom_item>

